{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload"  // 禁用自动重载，以便调试
            ],
            "justMyCode":false,
            "django": true,
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "helloworld.settings"  // 替换为你的 settings 模块路径
            }
        }
    ]
}